<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    	<bean id="oracleGateway"			class="hibernate.dao.OracleGateway" />
    	
	<bean id="addCountry"       	 		class="action.handlers.country.AddCountry" />
    	<bean id="modifyCountry"        		class="action.handlers.country.ModifyCountry" />
    	<bean id="removeCountry"        		class="action.handlers.country.RemoveCountry" />
    	<bean id="showAllCountry"        		class="action.handlers.country.ShowAllCountry" />
	
	<bean id="addRegion"       	 		class="action.handlers.region.AddRegion" />
	<bean id="modifyRegion"        		class="action.handlers.region.ModifyRegion" />
	<bean id="removeRegion"        		class="action.handlers.region.RemoveRegion" />
	<bean id="showAllRegionInCountry"  class="action.handlers.region.ShowAllRegionInCountry" />

	<bean id="addCity"        			class="action.handlers.city.AddCity" />
	<bean id="modifyCity"        			class="action.handlers.city.ModifyCity" />
	<bean id="removeCity"        			class="action.handlers.city.RemoveCity" />
	<bean id="showAllCityInRegion"        	class="action.handlers.city.ShowAllCityInRegion" />

	<bean id="addUniversity"        		class="action.handlers.university.AddUniversity" />
	<bean id="modifyUniversity"        	class="action.handlers.university.ModifyUniversity" />
	<bean id="removeUniversity"        	class="action.handlers.university.RemoveUniversity" />
	<bean id="showOneUniversity"        	class="action.handlers.university.ShowOneUniversity" />
	<bean id="showAllUniversityInCity"  	class="action.handlers.university.ShowAllUniversityInCity" />
</beans>